<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:showDividers="middle"
    android:divider="@drawable/divider"
    tools:context=".view.fragment.CalculatorFragment">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/textview_camera"
        android:hint="@string/camera">

        <AutoCompleteTextView
            android:id="@+id/textview_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_camera"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/aperture"
        app:prefixText="f/">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textview_aperture"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_aperture"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/focal_length"
        app:suffixText="mm">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textview_focal_length"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_focal_length"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/max_exposure_time"
        app:suffixText="s">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textview_exposure_time"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_exposure_time"
            android:enabled="false"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textview_iso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/slider_iso"
        android:text="@string/iso" />
    <io.sirpryderi.github.astrophotographycalculator.view.component.IsoSlider
        android:id="@+id/slider_iso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="@string/default_iso"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_exposure_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exposure_value" />
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_exposure_value"
        android:progress="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>